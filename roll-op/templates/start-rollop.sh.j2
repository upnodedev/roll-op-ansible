#!/bin/bash

ROLLUP_NAME={{ roll_op_rollup_name }}
ROLLUP_PRESET={{ roll_op_preset }}

if [ ! -f "./roll-op/deployments/$ROLLUP_NAME/addresses.json" ]; then
    ./roll-op/rollop --name=$ROLLUP_NAME --preset=$ROLLUP_PRESET --config=config.toml deploy-l2
fi

./roll-op/rollop --name=$ROLLUP_NAME --preset=$ROLLUP_PRESET --config=config.toml start-l2